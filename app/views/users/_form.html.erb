<%= render 'shared/errors', obj: @user %>

<%= form_for(@user, :html => {class:"ui form", role: "form"}) do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "Enter username" %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Enter email" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter password" %>
  </div>
 
  <%= f.submit(@user.new_record? ? "Sign up": "Update account", class: "ui button") %>

<% end %>