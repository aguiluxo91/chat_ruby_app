<h1 class="center">All the MessageMe Users!</h1>

<div class="center users">
    <%= will_paginate %>
        <% @users.each do |user| %>
            <div class="ui raised segment">
                <ul class="listing">
                    <li class=""><%= link_to gravatar_for(user), user_path(user) %></li>
                    <li>
                        <%= link_to user.username, user_path(user) %>
                    </li>
                    <% if logged_in? and current_user.admin? %>
                        <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete ther user and all their articles?" }%></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    <%= will_paginate %>
</div>